#include "p16F887.inc"   ; TODO INSERT CONFIG CODE HERE USING CONFIG BITS GENERATOR
 	__CONFIG	_CONFIG1,	_INTRC_OSC_NOCLKOUT & _WDT_OFF & _PWRTE_OFF & _MCLRE_ON & _CP_OFF & _CPD_OFF & _BOR_OFF & _IESO_ON & _FCMEN_ON & _LVP_OFF 
 	__CONFIG	_CONFIG2,	_BOR40V & _WRT_OFF

RES_VECT  CODE    0x0000            ; processor reset vector
    GOTO    START                   ; go to beginning of program

    BCF PORTC, 0		;reset
    MOVLW 0x01
    MOVWF PORTD
    
    BSF PORTC, 1		;exec
    CALL time
    BCF PORTC, 1
    CALL time
  
    GOTO    START

MAIN_PROG CODE                      ; let linker place main program

START

i equ 0x30
j equ 0x31
c0 equ 0x40
c1 equ 0x41
c2 equ 0x42
c3 equ 0x43
c4 equ 0x44
c5 equ 0x45
c6 equ 0x46
c7 equ 0x47
aux equ 0x48
k equ 0x49

START
    BANKSEL PORTA
    CLRF PORTA
    BANKSEL ANSEL
    CLRF ANSEL
    CLRF ANSELH
    BANKSEL TRISA
    MOVLW d'0'
    MOVWF TRISA
    CLRF TRISB
    CLRF TRISC
    CLRF TRISD
    MOVLW b'11111100'
    MOVWF TRISE
    BCF STATUS, RP1
    BCF STATUS, RP0
    BCF PORTC, 1
    BCF PORTC, 0
    BCF PORTE, 1
    BCF PORTE, 0
    
INITLCD
    MOVLW 0x3F
    MOVWF aux
       
    BCF PORTC, 0	;reset
    MOVLW 0x01
    MOVWF PORTD
    CALL exec
    
    MOVLW 0x0C		;first line
    MOVWF PORTD
    CALL exec
    
    MOVLW 0x3C		;cursor mode
    MOVWF PORTD
    CALL exec

INICIO
    BCF PORTC, 0	;reset
    MOVLW 0x01
    MOVWF PORTD
    CALL exec
    ;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
    BCF PORTC, 0	;command mode
    CALL time
    
    MOVLW 0x80		;LCD position
    MOVWF PORTD
    CALL exec
    
    BSF PORTC, 0	;data mode
    CALL time
    ;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
    MOVLW 'C'
    MOVWF PORTD
    CALL exec
    MOVLW 'L'
    MOVWF PORTD
    CALL exec
    MOVLW 'A'
    MOVWF PORTD
    CALL exec
    MOVLW 'V'
    MOVWF PORTD
    CALL exec
    MOVLW 'E'
    MOVWF PORTD
    CALL exec
    MOVLW ':'
    MOVWF PORTD
    CALL exec
    ;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
    BCF PORTC, 0	;command mode
    CALL time
    
    MOVLW 0xC0		;LCD position 
    MOVWF PORTD
    CALL exec
    
    BSF PORTC, 0	;data mode
    CALL time
    ;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
    MOVLW ' '
    MOVWF PORTD
    CALL exec
    MOVLW ' '
    MOVWF PORTD
    CALL exec
    MOVLW ' '
    MOVWF PORTD
    CALL exec
    MOVLW ' '
    MOVWF PORTD
    CALL exec
    MOVLW '9'
    MOVWF PORTD
    CALL exec
    MOVLW '0'
    MOVWF PORTD
    CALL exec
    MOVLW '3'
    MOVWF PORTD
    CALL exec
    MOVLW '5'
    MOVWF PORTD
    CALL exec
    MOVLW '5'
    MOVWF PORTD
    CALL exec
    MOVLW '8'
    MOVWF PORTD
    CALL exec
    MOVLW '5'
    MOVWF PORTD
    CALL exec
    MOVLW '4'
    MOVWF PORTD
    CALL exec
    ;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
    BCF PORTC, 0	;command mode
    CALL time
    
    MOVLW 0x90		;LCD position 
    MOVWF PORTD
    CALL exec
    
    BSF PORTC, 0	;data mode
    CALL time
    ;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
    MOVLW 'P'
    MOVWF PORTD
    CALL exec
    MOVLW 'A'
    MOVWF PORTD
    CALL exec
    MOVLW 'S'
    MOVWF PORTD
    CALL exec
    MOVLW 'S'
    MOVWF PORTD
    CALL exec
    MOVLW 'W'
    MOVWF PORTD
    CALL exec
    MOVLW 'O'
    MOVWF PORTD
    CALL exec
    MOVLW 'R'
    MOVWF PORTD
    CALL exec
    MOVLW 'D'
    MOVWF PORTD
    CALL exec
    MOVLW ':'
    MOVWF PORTD
    CALL exec
    ;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
    BCF PORTC, 0	;command mode
    CALL time
    
    MOVLW 0xD0		;LCD position 
    MOVWF PORTD
    CALL exec
    
    BSF PORTC, 0	;data mode
    CALL time
    ;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
    MOVLW ' '
    MOVWF PORTD
    CALL exec
    MOVLW ' '
    MOVWF PORTD
    CALL exec
    MOVLW ' '
    MOVWF PORTD
    CALL exec
    MOVLW ' '
    MOVWF PORTD
    CALL exec
    CALL ingresar
    
    GOTO INICIO

ingresar
    BSF PORTA, 0
    BSF PORTA, 1
    BSF PORTA, 2
    BSF PORTA, 3
    BSF PORTA, 4
    BSF PORTA, 5
    BSF PORTA, 6
    
    BCF PORTA, 3
    CALL A1
    CALL time1
    BSF PORTA, 3
    
    BCF PORTA, 2
    CALL B1
    CALL time1
    BSF PORTA, 2
    
    BCF PORTA, 1
    CALL C1
    CALL time1
    BSF PORTA, 1
    
    BCF PORTA, 0
    CALL D1
    CALL time1
    BCF PORTA, 0
    
    GOTO ingresar

A1
    BTFSS PORTA, 4
    CALL uno
    BTFSS PORTA, 5
    CALL dos
    BTFSS PORTA, 6
    CALL tres
    RETURN

B1
    BTFSS PORTA, 4
    CALL cuatro
    BTFSS PORTA, 5
    CALL cinco
    BTFSS PORTA, 6
    CALL seis
    RETURN

C1
    BTFSS PORTA, 4
    CALL siete
    BTFSS PORTA, 5
    CALL ocho
    BTFSS PORTA, 6
    CALL nueve
    RETURN

D1
    BTFSS PORTA, 4
    CALL asterisco_borrar
    BTFSS PORTA, 5
    CALL cero
    BTFSS PORTA, 6
    CALL gato_enter
    RETURN

cero
    INCF aux
    MOVFW aux
    MOVWF FSR
    MOVLW '0'
    MOVWF INDF
    MOVWF PORTD
    CALL exec
    BSF PORTA, 5
    CALL time2
    RETURN

uno
    INCF aux
    MOVFW aux
    MOVWF FSR
    MOVLW '1'
    MOVWF INDF
    MOVWF PORTD
    CALL exec
    BSF PORTA, 4
    CALL time2
    RETURN

dos
    INCF aux
    MOVFW aux
    MOVWF FSR
    MOVLW '2'
    MOVWF INDF
    MOVWF PORTD
    CALL exec
    BSF PORTA, 5
    CALL time2
    RETURN

tres
    INCF aux
    MOVFW aux
    MOVWF FSR
    MOVLW '3'
    MOVWF INDF
    MOVWF PORTD
    CALL exec
    BSF PORTA, 6
    CALL time2
    RETURN

cuatro
    INCF aux
    MOVFW aux
    MOVWF FSR
    MOVLW '4'
    MOVWF INDF
    MOVWF PORTD
    CALL exec
    BSF PORTA, 4
    CALL time2
    RETURN

cinco
    INCF aux
    MOVFW aux
    MOVWF FSR
    MOVLW '5'
    MOVWF INDF
    MOVWF PORTD
    CALL exec
    BSF PORTA, 5
    CALL time2
    RETURN

seis
    INCF aux
    MOVFW aux
    MOVWF FSR
    MOVLW '6'
    MOVWF INDF
    MOVWF PORTD
    CALL exec
    BSF PORTA, 6
    CALL time2
    RETURN

siete
    INCF aux
    MOVFW aux
    MOVWF FSR
    MOVLW '7'
    MOVWF INDF
    MOVWF PORTD
    CALL exec
    BSF PORTA, 4
    CALL time2
    RETURN

ocho
    INCF aux
    MOVFW aux
    MOVWF FSR
    MOVLW '8'
    MOVWF INDF
    MOVWF PORTD
    CALL exec
    BSF PORTA, 5
    CALL time2
    RETURN

nueve
    INCF aux
    MOVFW aux
    MOVWF FSR
    MOVLW '9'
    MOVWF INDF
    MOVWF PORTD
    CALL exec
    BSF PORTA, 6
    CALL time2
    RETURN

asterisco_borrar
    INCF aux
    MOVFW aux
    MOVWF FSR
    MOVLW '*'
    MOVWF INDF
    MOVWF PORTD
    CALL exec
    BSF PORTA, 4
    CALL time2
    RETURN

gato_enter
    MOVLW '9'
    XORWF c0, 1
    INCF c0, 1
    DECFSZ c0
    GOTO no_iguales
    
    MOVLW '0'
    XORWF c1, 1
    INCF c1, 1
    DECFSZ c1
    GOTO no_iguales
    
    MOVLW '3'
    XORWF c2, 1
    INCF c2, 1
    DECFSZ c2
    GOTO no_iguales
    
    MOVLW '5'
    XORWF c3, 1
    INCF c3, 1
    DECFSZ c3
    GOTO no_iguales
    
    MOVLW '5'
    XORWF c4, 1
    INCF c4, 1
    DECFSZ c4
    GOTO no_iguales
    
    MOVLW '8'
    XORWF c5, 1
    INCF c5, 1
    DECFSZ c5
    GOTO no_iguales
    
    MOVLW '5'
    XORWF c6, 1
    INCF c6, 1
    DECFSZ c6
    GOTO no_iguales
    
    MOVLW '4'
    XORWF c7, 1
    INCF c7, 1
    DECFSZ c7
    GOTO no_iguales
    GOTO si_iguales

    BSF PORTA, 6
    CALL time2
    RETURN

exec
    BSF PORTC, 1
    CALL time
    BCF PORTC, 1
    CALL time
    RETURN

no_iguales
    BCF PORTC, 0
    MOVLW 0x01
    MOVWF PORTD
    CALL exec
    ;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
    BCF PORTC, 0	;command mode
    CALL time
    
    MOVLW 0xC0		;LCD position
    MOVWF PORTD
    CALL exec
    
    BSF PORTC, 0	;data mode
    CALL time
    ;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
    MOVLW ' '
    MOVWF PORTD
    CALL exec
    MOVLW ' '
    MOVWF PORTD
    CALL exec
    MOVLW ' '
    MOVWF PORTD
    CALL exec
    MOVLW 'D'
    MOVWF PORTD
    CALL exec
    MOVLW 'I'
    MOVWF PORTD
    CALL exec
    MOVLW 'F'
    MOVWF PORTD
    CALL exec
    MOVLW 'E'
    MOVWF PORTD
    CALL exec
    MOVLW 'R'
    MOVWF PORTD
    CALL exec
    MOVLW 'E'
    MOVWF PORTD
    CALL exec
    MOVLW 'N'
    MOVWF PORTD
    CALL exec
    MOVLW 'T'
    MOVWF PORTD
    CALL exec
    MOVLW 'E'
    MOVWF PORTD
    CALL exec
    MOVLW 'S'
    MOVWF PORTD
    CALL exec
ciclo4
    GOTO ciclo4
    
    
si_iguales
    BCF PORTC, 0
    MOVLW 0x01
    MOVWF PORTD
    CALL exec
    ;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
    BCF PORTC, 0	;command mode
    CALL time
    
    MOVLW 0xC0		;LCD position
    MOVWF PORTD
    CALL exec
    
    BSF PORTC, 0	;data mode
    CALL time
    ;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
    MOVLW ' '
    MOVWF PORTD
    CALL exec
    MOVLW ' '
    MOVWF PORTD
    CALL exec
    MOVLW ' '
    MOVWF PORTD
    CALL exec
    MOVLW ' '
    MOVWF PORTD
    CALL exec
    MOVLW 'I'
    MOVWF PORTD
    CALL exec
    MOVLW 'G'
    MOVWF PORTD
    CALL exec
    MOVLW 'U'
    MOVWF PORTD
    CALL exec
    MOVLW 'A'
    MOVWF PORTD
    CALL exec
    MOVLW 'L'
    MOVWF PORTD
    CALL exec
    MOVLW 'E'
    MOVWF PORTD
    CALL exec
    MOVLW 'S'
    MOVWF PORTD
    CALL exec
ciclo3
    GOTO ciclo3
time
    CLRF i
    MOVLW d'10'
    MOVWF j
ciclo1
    MOVLW d'80'
    MOVWF i
    DECFSZ i
    GOTO $-1
    DECFSZ j
    GOTO ciclo1
    RETURN
    

time1
    CLRF i
    MOVLW d'20'
    MOVWF j
ciclo2 
    MOVLW d'30'
    MOVWF i
    DECFSZ i
    GOTO $-1
    DECFSZ j
    GOTO ciclo2
    RETURN

time2
    MOVLW d'10'
    MOVWF i
loopj:
    MOVLW d'20'
    MOVWF j
loopk:
    MOVLW d'200'
    MOVWF k
loopi:
    NOP
    NOP
    DECFSZ k, 1
    GOTO loopi
    DECFSZ j, 1
    GOTO loopk
    DECFSZ i, 1
    GOTO loopj
    RETURN

END
